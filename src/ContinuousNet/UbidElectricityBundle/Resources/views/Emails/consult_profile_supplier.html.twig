{% extends 'UbidElectricityBundle::email_template.html.twig' %}
{% block mailContent %}
    <p style="padding-bottom: 20px;">{{ 'email.consult_profile_supplier.dear' | trans({'%fistname%': supplier.getCreatorUser().getFirstName()}) }}</p>

    <p style="padding-bottom: 20px;">{{ 'email.consult_profile_supplier.supplier_consulted' | trans({'%suppliername%': supplier.getName()}) }}</p>

    <table style="border: 1px solid #ccc; border-spacing: 0; width: 100%;">
        <tr>
            <th style="background-color: #1D69AD; color: white; padding: 5px 10px; text-align: left">
                {{ 'email.consult_profile_supplier.supplier_informations' | trans }}
            </th>
        </tr>
        <tr>
            <td style="background-color: white; color: #1D69AD; padding: 15px 10px;">
                <p><span style="color: #1D69AD;">{{ 'email.consult_profile_supplier.name' | trans }}</span> : {{ supplier.getName() }}</p>
                <p><span style="color: #1D69AD;">{{ 'email.consult_profile_supplier.description' | trans }}</span> : {{ supplier.getDescription() | striptags}}</p>
            </td>
        </tr>
    </table>
{% endblock %}