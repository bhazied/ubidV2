{% extends 'UbidElectricityBundle::email_template.html.twig' %}
{% block mailContent %}
    <p style="padding-bottom: 20px;">{{ 'email.alert.dear' | trans({'%fistname%': fistName}) }}</p>
    <p style="padding-bottom: 20px;">{{ 'email.alert.new_content_published' }}</p>
    <table style="border: 1px solid #ccc; border-spacing: 0; width: 100%;">
        {% if Tenders %}
            <tr>
                <th style="background-color: #1D69AD; color: white; padding: 5px 10px; text-align: left">
                    {{ 'email.alert.tenders' | trans }}
                </th>
            </tr>
            <tr>
                <td style="background-color: white; color: #1D69AD; padding: 15px 10px;">
                    {% for id,tender in tenders %}
                        <p><a href="{{ baseUrl }}/{{ 'email.locale' | trans }}/tender/{{ id }}" style="text-decoration:none;color: #1D69AD;"  target="_blank">{{ tender }}</a></p>
                    {% endfor %}
                </td>
            </tr>
        {% endif %}
        {% if Tenders %}
            <tr>
                <th style="background-color: #1D69AD; color: white; padding: 5px 10px; text-align: left">
                    {{ 'email.alert.consultations' | trans }}
                </th>
            </tr>
