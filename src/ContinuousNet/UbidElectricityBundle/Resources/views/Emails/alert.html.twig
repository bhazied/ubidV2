                    {% endfor %}
                </td>
            </tr>
        {% endif %}
        {% if Buyers %}
            <tr>
                <th style="background-color: #1D69AD; color: white; padding: 5px 10px; text-align: left">
                    {{ 'email.alert.buyers' | trans }}
                </th>
            </tr>
            <tr>
                <td style="background-color: white; color: #1D69AD; padding: 15px 10px;">
                    {% for id,buyer in buyers %}
                        <p><a href="{{ baseUrl }}/{{ 'email.locale' | trans }}/buyer/{{ id }}" style="text-decoration:none;color: #1D69AD;"  target="_blank">{{ buyer }}</a></p>
                    {% endfor %}
